        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/hourly_forecast_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    </LinearLayout>
</LinearLayout>